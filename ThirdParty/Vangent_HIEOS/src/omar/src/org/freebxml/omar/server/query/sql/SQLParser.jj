String SQLOrderByList() :
{ String rs = new String(""), ts; }
{
  ts = SQLOrderByElem() { rs = rs + ts; }
  ( LOOKAHEAD(2)
    "," { rs = rs + ", "; }
    ts = SQLOrderByElem() { rs = rs + ts; })*
  { return rs; }
}

