<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.connectopensource</groupId>
        <artifactId>Direct</artifactId>
        <version>4.5.3-HOTFIX</version>
    </parent>

    <artifactId>AutomatedDirectOutboundTesting</artifactId>
    <name>Maven 3 soapUI AutomatedDirectOutboundTesting</name>
    <packaging>jar</packaging>
    <modelVersion>4.0.0</modelVersion>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.redfish4ktc.soapui</groupId>
                <artifactId>maven-soapui-extension-plugin</artifactId>
                <configuration>
                    <settingsFile>${basedir}/../../src/main/resources/soapui-settings.xml</settingsFile>
                    <outputFolder>${project.build.directory}/soapui/output/</outputFolder>
                    <soapuiProperties>
                        <property>
                            <name>soapui.logroot</name>
                            <value>${project.build.directory}/soapui/my_custom_logs/</value>
                        </property>
                        <property>
                            <name>soapui.scripting.library</name>
                            <value>${basedir}/../../src/main/resources/groovy_scripts</value>
                        </property>
                        <property>
                            <name>soapui.ext.libraries</name>
                            <value>${basedir}/../../src/main/resources/ext</value>
                        </property>
                    </soapuiProperties>
                    <testSuite>${test.suite}</testSuite>
                    <testCase>${test.case}</testCase>
                    <projectProperties>
                        <value>GatewayPropDir=${properties.dir}</value>
                        <value>RemoteGatewayPropDir=${remote.properties.dir}</value>
                        <value>DBHost=${db.host}</value>
                        <value>DBPass=${db.password}</value>
                        <value>DBPort=${db.port}</value>
                        <value>DBUser=${db.user}</value>
                        <value>RemoteDBHost=${db.remote.host}</value>
                        <value>RemoteDBPass=${db.remote.password}</value>
                        <value>RemoteDBPort=${db.remote.port}</value>
                        <value>RemoteDBUser=${db.remote.user}</value>
                        <value>ASUsername=admin</value>
                        <value>ASPassword=adminadmin</value>
                        <value>JMXHost=localhost</value>
                        <value>JMXPort=8686</value>
                        <value>MailServerIP=${mailip}</value>
                        <value>MailUserid=${mailid}</value>
                        <value>MailPass=${mailpass}</value>
                        <value>MailServerPort=${mailport}</value>
                        <value>MailSubject=${mailsubject}</value>
                        <value>MailFrom=${mailfrom}</value>
                        <value>MailTo=${mailto}</value>
                        <value>Notify=${notify}</value>
                        <value>AnchorOwner=${anchorowner}</value>
                        <value>DelayTime=${delay}</value>
                        <value>AnchorKeyStoreFile=${anchorKeyStoreFile}</value>
                        <value>PrivateKeyStoreFile=${privateKeyStoreFile}</value>
                    </projectProperties>
                </configuration>
                <executions>
                    <execution>
                        <id>AutomatedDirectOutboundTesting-soapui-project</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <projectFile>${basedir}/AutomatedDirectOutboundTesting-soapui-project.xml</projectFile>
                            <outputFolder>${project.build.directory}/soapui/output</outputFolder>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-verify</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>test-verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
