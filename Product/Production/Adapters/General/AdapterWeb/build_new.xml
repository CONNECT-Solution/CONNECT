<?xml version="1.0" encoding="utf-8"?>
<project basedir="." default="package.create" name="AdapterWeb">

	<property name="dist.type" value="war" />
	<property name="webtest.hasTests" value="false" />
	<property name="unittest.hasTests" value="true" />
  <property name="deploy.isDeployable" value="true"/>
  <property name="deploy.type" value="war" />
  <property name="copy.wsdl.to.webinf" value="true" />
  
	<!-- Please make sure that this goes up to the correct directory -->
	<import file="../../../../build/build.targets.xml" />

	<path id="build.classpath">
		<fileset refid="classpath.compile" />
		<fileset refid="classpath.runtime" />

		<!-- Add classes from other projects like so...-->
    
    <pathelement path="${project.AdapterInternalComponentProxy.build.classes.dir}" />
    <pathelement path="${project.CommonServiceProxy.build.classes.dir}" />
    <pathelement path="${project.DocumentRepository.build.classes.dir}" />
    <pathelement path="${project.GatewayInternalComponentProxy.build.classes.dir}" />
		<pathelement path="${project.NhincCommonLib.build.classes.dir}" />
    <pathelement path="${project.NhincCommonTypesLib.build.classes.dir}" />    
    <pathelement path="${project.NhinServiceProxy.build.classes.dir}" />    
	</path>

	<!-- Add project dependencies here, these projects will be built first... -->
	<path id="build.project.dependencies">
		<filelist dir="${root.project.directory.path}">
		</filelist>
	</path>

  <path id="war.libs">
		<filelist dir="${root.project.directory.path}">
			<file name="${project.AdapterInternalComponentProxy.dist.file}" />
			<file name="${project.CommonServiceProxy.dist.file}" />
			<file name="${project.DocumentRepository.dist.file}" />
			<file name="${project.GatewayInternalComponentProxy.dist.file}" />
      <file name="${project.NhincCommonLib.dist.file}" />
      <file name="${project.NhincCommonTypesLib.dist.file}" />
      <file name="${project.NhinServiceProxy.dist.file}" />
      <file name="${project.NhincCommonDAO.dist.file}" />      
		</filelist>
	</path>
  
</project>