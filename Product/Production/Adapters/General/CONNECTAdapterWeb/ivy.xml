<ivy-module version="1.0">
  <info
      organisation="gov.hhs.fha"
      module="CONNECTAdapterWeb"
      status="integration">
  </info>

  <configurations>
    <conf name="compile" description="libraries required to run web-app" />
    <conf name="runtime" extends="compile" description="libraries we will need to compile the project (example: j2ee.jar)" />
    <conf name="test" description="what we need to run unit tests"/>
  </configurations>

  <dependencies>
    <!-- Project dependencies -->
    
    <!-- runtime jars -->
    <dependency org="OpenSSO"       		name="openssoclientsdk"		rev="1.0"		conf="runtime->default"		transitive="false" />

    <!-- compile time jars -->

    <!-- compile jars -->
    <dependency org="org.glassfish.metro"		name="webservices-rt"		rev="2.1.1"		conf="runtime->default"		transitive="false" />
    <dependency org="org.springframework"	name="spring"               rev="2.5.6"		conf="compile->default"		transitive="false" />
	<dependency org="commons-logging"		name="commons-logging"		rev="1.1.1"		conf="compile->default"		transitive="false" />
    <dependency org="log4j"					name="log4j"				rev="1.2.15"	conf="compile->default"		transitive="false" />
    <!-- runtime jars -->

    
    <!-- jars for test only -->
    <dependency org="org.jmock"				name="jmock-junit4"			rev="2.5.1"		conf="test->default" />
    <dependency org="junit"					name="junit"				rev="4.7"		conf="test->default" />
    <dependency org="org.jmock"				name="jmock-legacy"			rev="2.5.1"		conf="test->default" />


    <!-- global excludes -->
    

  </dependencies>
</ivy-module>
