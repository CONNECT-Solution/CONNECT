            <artifactId>maven-ear-plugin</artifactId>
            <configuration>
              <modules combine.children="append">
                <webModule>
                  <groupId>org.connectopensource</groupId>
                  <artifactId>PatientDiscovery_10</artifactId>
                  <contextRoot>/Gateway/PatientDiscovery/1_0</contextRoot>
                  <excluded>${pd.excluded}</excluded>
