<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.connectopensource</groupId>
        <artifactId>Deploy</artifactId>
        <version>4.5.0-SNAPSHOT</version>
    </parent>

    <artifactId>ear</artifactId>
    <name>CONNECT EAR - Dependencies</name>
    <packaging>pom</packaging>
    <modelVersion>4.0.0</modelVersion>
    <description>CONNECT EAR - Dependencies</description>

    <properties>
        <skip.unpack>true</skip.unpack>
        <ad.excluded>true</ad.excluded>
        <dq.excluded>true</dq.excluded>
        <dr.excluded>true</dr.excluded>
        <ds.excluded>true</ds.excluded>
        <gui.excluded>true</gui.excluded>
        <pd.excluded>true</pd.excluded>
        <direct.excluded>true</direct.excluded>
        <admingui.excluded>true</admingui.excluded>
        <x12.excluded>true</x12.excluded>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>ear-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- PD -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>pd-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- AD -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>ad-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- DS -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>ds-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- DQ -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>dq-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- DR -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>dr-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <!-- GUI -->
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>gui-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>admingui-dependencies</artifactId>
            <version>${project.parent.version}</version>
            <type>pom</type>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <modules>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTCommonWeb</artifactId>
                            <contextRoot>/CONNECTCommon</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTGatewayWeb</artifactId>
                            <contextRoot>/CONNECTGateway</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTAdapterWeb</artifactId>
                            <contextRoot>/CONNECTAdapter</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>PatientDiscovery_10</artifactId>
                            <contextRoot>/Gateway/PatientDiscovery/1_0</contextRoot>
                            <excluded>${pd.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>PatientDiscovery_a0</artifactId>
                            <contextRoot>/Adapter/PatientDiscovery/A_0</contextRoot>
                            <excluded>${pd.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_10</artifactId>
                            <contextRoot>/Gateway/AdminDistribution/1_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_20</artifactId>
                            <contextRoot>/Gateway/AdminDistribution/2_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>AdminDistribution_a0</artifactId>
                            <contextRoot>/Adapter/AdminDistribution/A_0</contextRoot>
                            <excluded>${ad.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentQuery_20</artifactId>
                            <contextRoot>/Gateway/DocumentQuery/2_0</contextRoot>
                            <excluded>${dq.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentQuery_30</artifactId>
                            <contextRoot>/Gateway/DocumentQuery/3_0</contextRoot>
                            <excluded>${dq.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentQuery_a0</artifactId>
                            <contextRoot>/Adapter/DocumentQuery/A_0</contextRoot>
                            <excluded>${dq.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_20</artifactId>
                            <contextRoot>/Gateway/DocumentRetrieve/2_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_30</artifactId>
                            <contextRoot>/Gateway/DocumentRetrieve/3_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentRetrieve_a0</artifactId>
                            <contextRoot>/Adapter/DocumentRetrieve/A_0</contextRoot>
                            <excluded>${dr.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_11</artifactId>
                            <contextRoot>/Gateway/DocumentSubmission/1_1</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_20</artifactId>
                            <contextRoot>/Gateway/DocumentSubmission/2_0</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>DocumentSubmission_a0</artifactId>
                            <contextRoot>/Adapter/DocumentSubmission/A_0</contextRoot>
                            <excluded>${ds.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTConsumerPreferencesProfileGUI</artifactId>
                            <contextRoot>/CONNECTConsumerPreferencesProfileGUI</contextRoot>
                            <excluded>${gui.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTDeferredQueueManagerGUI</artifactId>
                            <contextRoot>/CONNECTDeferredQueueManagerGUI</contextRoot>
                            <excluded>${gui.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTUniversalClientGUI</artifactId>
                            <contextRoot>/CONNECTUniversalClientGUI</contextRoot>
                            <excluded>${gui.excluded}</excluded>
                        </webModule>
                        <webModule>
                            <groupId>org.connectopensource</groupId>
                            <artifactId>CONNECTAdminGUI</artifactId>
                            <contextRoot>/CONNECTAdminGUI</contextRoot>
                            <excluded>${admingui.excluded}</excluded>
                        </webModule>
                    </modules>
                    <version>5</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <skinnyWars>true</skinnyWars>
                    <packagingExcludes>
                        lib/Properties-*.jar
                    </packagingExcludes>

                    <!-- this causes all archives to be exploded on server SLOW!!! <includeLibInApplicationXml>true</includeLibInApplicationXml> -->
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>PD</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <pd.excluded>false</pd.excluded>
            </properties>
        </profile>
        <profile>
            <id>AD</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <ad.excluded>false</ad.excluded>
            </properties>
        </profile>
        <profile>
            <id>DQ</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dq.excluded>false</dq.excluded>
            </properties>
        </profile>
        <profile>
            <id>DR</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dr.excluded>false</dr.excluded>
            </properties>
        </profile>
        <profile>
            <id>DS</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <ds.excluded>false</ds.excluded>
            </properties>
        </profile>
        <profile>
            <id>Direct</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <direct.excluded>false</direct.excluded>
            </properties>
        </profile>
        <profile>
            <id>GUI</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <gui.excluded>false</gui.excluded>
            </properties>
        </profile>
        <profile>
            <id>AdminGUI</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <admingui.excluded>false</admingui.excluded>
            </properties>
        </profile>
        <profile>
            <id>X12</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <x12.excluded>false</x12.excluded>
            </properties>

            <!-- X12 -->
            <dependencies>
                <dependency>
                    <groupId>org.connectopensource</groupId>
                    <artifactId>x12-dependencies</artifactId>
                    <version>${project.parent.version}</version>
                    <type>pom</type>
                </dependency>
            </dependencies>

            <build>
                <finalName>${project.artifactId}</finalName>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-ear-plugin</artifactId>
                        <configuration>
                            <modules combine.children="append">
                                <webModule>
                                    <groupId>org.connectopensource</groupId>
                                    <artifactId>CORE_X12DocumentSubmission_10</artifactId>
                                    <contextRoot>/Gateway/CORE_X12DocumentSubmission/1_0</contextRoot>
                                    <excluded>${x12.excluded}</excluded>
                                </webModule>
                                <webModule>
                                    <groupId>org.connectopensource</groupId>
                                    <artifactId>CORE_X12DocumentSubmission_a0</artifactId>
                                    <contextRoot>/Adapter/CORE_X12DocumentSubmission/A_0</contextRoot>
                                    <excluded>${x12.excluded}</excluded>
                                </webModule>
                            </modules>
                            <version>5</version>
                            <defaultLibBundleDir>lib</defaultLibBundleDir>
                            <skinnyWars>true</skinnyWars>
                            <packagingExcludes>
                                lib/Properties-*.jar
                            </packagingExcludes>

                            <!-- this causes all archives to be exploded on server SLOW!!! <includeLibInApplicationXml>true</includeLibInApplicationXml> -->
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
