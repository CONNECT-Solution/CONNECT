    <build>
        <!-- Caution: If <resources> or <testResources> is overridden by 
            a child POM then all <resource> and <testResouce> elements will need to be 
            placed within the child POM that overrides the <resourcs> or <testResources> -->
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>.gitignore</exclude>
                    <exclude>xml-resources/</exclude>
                </excludes>
            </resource>
            <!-- <resource>
                Caution: Defining this resource to copy over the extracted 
                    wsdls from <directory> into ${project.build.directory}/classes so the resources 
                    are included within resulting archive
                <directory>${project.build.directory}/wsdl2java-sources/</directory>
                <includes>
                    <include>wsdl/**/*.wsdl</include>
                </includes>
            </resource> -->
            <resource>
                <directory>${basedir}/src/main/resources/wsdl</directory>
                <includes>
                    <include>*.wsdl</include>
                </includes>
                <targetPath>${project.build.directory}/wsdl2java-sources/wsdl</targetPath>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>${basedir}/src/test/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </testResource>
            <testResource>
                <filtering>true</filtering>
                <directory>${basedir}/../../Common/Properties/Dev</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </testResource>
        </testResources>
        <finalName>CONNECTCommonWeb</finalName>
        <plugins>
            <plugin>
                <!-- Used to pull XSD files from the JAR -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-xsd-files</id>
                        <!-- Using the initialize phase because it is before 
                            the generate sources phase -->
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <!-- Artifact that Holds our custom templates -->
                                    <groupId>gov.hhs.fha</groupId>
                                    <artifactId>CONNECTCommonTypesLib</artifactId>
                                    <version>${parent.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <includes>schemas/**/*.xsd</includes>
                            <outputDirectory>${project.build.directory}/wsdl2java-sources/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>gov.hhs.fha</groupId>
                        <artifactId>CONNECTCommonTypesLib</artifactId>
                        <version>1.0.1-SNAPSHOT</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <configuration>
                            <fork>once</fork>
                            <encoding>UTF-8</encoding>
                            <sourceRoot>${project.build.directory}/generated-sources/</sourceRoot>
                            <classesDirectory>${project.build.directory}/wsdl2java-sources/</classesDirectory>
                            <wsdlRoot>${project.build.directory}/wsdl2java-sources/</wsdlRoot>
                            ws
                            <includes>
                                <include>**/wsdl/*.wsdl</include>
                            </includes>
                            <defaultOptions>
                                <extraargs>
                                    <extraarg>-verbose</extraarg>
                                    <extraarg>-client</extraarg>
                                    <extraarg>-dns</extraarg>
                                    <extraarg>false</extraarg>
                                    <extraarg>-noTypes</extraarg>
                                </extraargs>
                                <noAddressBinding>true</noAddressBinding>
                            </defaultOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <packagingExcludes>WEB-INF/classes/xml-resources/**</packagingExcludes>
                    <webResources>
                        <!-- <resource>
                            <directory>${project.build.directory}/wsdl2java-sources/</directory>
                            <includes>
                                <include>**/*.wsdl</include>
                                <include>**/nhinc/common/**/*.xsd</include>
                                <include>**/uddi/**/*.xsd</include>
                                <include>**/www.w3.org/**/*.xsd</include>
                            </includes>
                            <targetPath>WEB-INF/</targetPath>
                        </resource> -->
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
