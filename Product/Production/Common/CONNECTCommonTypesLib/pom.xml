<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>gov.hhs.fha</groupId>
        <artifactId>Common</artifactId>
        <version>1.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>CONNECTCommonTypesLib</artifactId>
    <packaging>jar</packaging>
    <name>CONNECT common types</name>
    <url>http://maven.apache.org</url>
    <properties>
        <cxf.version>2.6.1</cxf.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-xjc</artifactId>
            <version>2.2.4-1</version>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/../Interfaces/src/wsdl</directory>
                <includes>
                    <include>*.wsdl</include>
                </includes>
                <excludes>
                    <exclude>NhinUddiSubrV3PortType.wsdl</exclude>
                    <exclude>NhincComponentInternalSubDiscovery201309Orch.wsdl</exclude>
                    <exclude>rw-2.wsdl</exclude>
                    <exclude>uddi_api_v3_binding.wsdl</exclude>
                    <exclude>uddi_api_v3_portType.wsdl</exclude>
                    <exclude>uddi_custody_v3_binding.wsdl</exclude>
                    <exclude>uddi_custody_v3_portType.wsdl</exclude>
                    <exclude>uddi_repl_v3_binding.wsdl</exclude>
                    <exclude>uddi_repl_v3_portType.wsdl</exclude>
                    <exclude>uddi_sub_v3_binding.wsdl</exclude>
                    <exclude>uddi_sub_v3_portType.wsdl</exclude>
                    <exclude>uddi_subr_v3_binding.wsdl</exclude>
                    <exclude>uddi_subr_v3_portType.wsdl</exclude>
                    <exclude>uddi_vs_v3_binding.wsdl</exclude>
                    <exclude>uddi_vs_v3_portType.wsdl</exclude>
                    <exclude>uddi_vscache_v3_binding.wsdl</exclude>
                    <exclude>uddi_vscache_v3_portType.wsdl</exclude>
                    <!-- non conforming with WS-I -->
                    <exclude>DoDConnector.wsdl</exclude>
                </excludes>
                <targetPath>META-INF/wsdl/</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <fork>once</fork>
                            <encoding>UTF-8</encoding>
                            <sourceRoot>${project.build.directory}/generated-sources/</sourceRoot>
                            <wsdlRoot>${basedir}/../Interfaces/src/wsdl</wsdlRoot>
                            <includes>
                                <include>*.wsdl</include>
                            </includes>
                            <excludes>
                                <exclude>NhinUddiSubrV3PortType.wsdl</exclude>
                                <exclude>NhincComponentInternalSubDiscovery201309Orch.wsdl</exclude>
                                <exclude>rw-2.wsdl</exclude>
                                <exclude>uddi_api_v3_binding.wsdl</exclude>
                                <exclude>uddi_api_v3_portType.wsdl</exclude>
                                <exclude>uddi_custody_v3_binding.wsdl</exclude>
                                <exclude>uddi_custody_v3_portType.wsdl</exclude>
                                <exclude>uddi_repl_v3_binding.wsdl</exclude>
                                <exclude>uddi_repl_v3_portType.wsdl</exclude>
                                <exclude>uddi_sub_v3_binding.wsdl</exclude>
                                <exclude>uddi_sub_v3_portType.wsdl</exclude>
                                <exclude>uddi_subr_v3_binding.wsdl</exclude>
                                <exclude>uddi_subr_v3_portType.wsdl</exclude>
                                <exclude>uddi_vs_v3_binding.wsdl</exclude>
                                <exclude>uddi_vs_v3_portType.wsdl</exclude>
                                <exclude>uddi_vscache_v3_binding.wsdl</exclude>
                                <exclude>uddi_vscache_v3_portType.wsdl</exclude>
                                <!-- non conforming with WS-I -->
                                <exclude>DoDConnector.wsdl</exclude>
                            </excludes>
                            <defaultOptions>
                                <extraargs>
                                    <extraarg>-verbose</extraarg>
                                    <extraarg>-client</extraarg>
                                    <extraarg>-noAddressBinding</extraarg>
                                    <extraarg>-dns</extraarg>
                                    <extraarg>false</extraarg>
                                </extraargs>
                            </defaultOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb22-plugin</artifactId>
                <version>0.8.2</version>
                <configuration>
                    <generateDirectory>${project.build.directory}/generated-sources/</generateDirectory>
                    <schemaDirectory>${basedir}/../Interfaces/src/schemas/</schemaDirectory>
                    <schemaIncludes>
                        <include>nhinc/**/*.xsd</include>
                        <include>docs.oasis-open.org/**/*.xsd</include>
                        <include>ebRS/**/*.xsd</include>
                        <include>ihe/**/*.xsd</include>
                        <include>nhin/**/*.xsd</include>
                        <include>oasis/**/*.xsd</include>
                        <include>uddi/uddi_v3.xsd</include>
                        <include>uddi/uddi_v3custody.xsd</include>
                        <include>uddi/uddi_v3policy_instanceParms.xsd</include>
                        <include>uddi/uddi_v3subscriptionListener.xsd</include>
                        <include>uddi/uddi_v3subscription.xsd</include>
                        <include>www.w3.org/**/*.xsd</include>
                        <include>xmlsoap.org/**/*.xsd</include>
                        <include>Endpoint/**/*.xsd</include>
                    </schemaIncludes>
                    <source>7</source>
                    <target>7</target>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <testSource>1.7</testSource>
                    <testTarget>1.7</testTarget>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <configLocation>${basedir}/../../../../Product/checkstyle.settings.xml</configLocation>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.apache.cxf</groupId>
                                        <artifactId>cxf-codegen-plugin</artifactId>
                                        <versionRange>[${cxf.version},)</versionRange>
                                        <goals>
                                            <goal>generate-sources</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <runOnIncremental>true</runOnIncremental>
                                        <runOnConfiguration>true</runOnConfiguration>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <pluginRepositories>
        <pluginRepository>
            <id>apache-snapshots</id>
            <name>Apache SNAPSHOT Repository</name>
            <url>http://repository.apache.org/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

</project>
