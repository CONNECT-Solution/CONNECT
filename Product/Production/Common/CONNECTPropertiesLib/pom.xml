<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.hhs.fha</groupId>
  <artifactId>CONNECTPropertiesLib</artifactId>
  <packaging>jar</packaging>
  <version>1.0.1</version>
  <name>CONNECT common types</name>
  <url>http://maven.apache.org</url>
  <properties>
    <cxf.version>2.6.1</cxf.version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-xjc-plugin</artifactId>
        <version>2.6.0</version>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>xsdtojava</goal>
            </goals>
            <configuration>
              <sourceRoot>${project.build.directory}/generated/cxf</sourceRoot>
              <xsdOptions>
                <!-- HL7v3 -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/HL7V3/NE2008/multicacheschemas/POCD_MT000040.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/HL7V3/NE2008/multicacheschemas/MCCI_IN000002UV01.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/HL7V3/NE2008/multicacheschemas/PRPA_IN201305UV02.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/HL7V3/NE2008/multicacheschemas/PRPA_IN201309UV02.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/HL7V3/NE2008/multicacheschemas/POCD_MT000040.xsd</xsd>
                </xsdoption>
                <!-- ihe -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/ihe/auditmessage.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/ihe/RFD.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/ihe/XDS.b_DocumentRepository.xsd</xsd>
                </xsdoption>
                <!-- nhin -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhin/HIEM.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhin/PatientDiscoveryFault.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhin/QueryDocument.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhin/RetrieveDocument.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhin/xdr.xsd</xsd>
                </xsdoption>
                <!-- nhinc/common -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/AuditLog.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/DocViewer.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommon.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonInternalOrch.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PatientCorrelationSecured.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/SubscriptionB2OverrideForDocuments.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/Cdc.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/EntityCommonInternalOrch.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonAdapter.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonProxy.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PolicyEngineDte.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/SubscriptionDte.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/ConnectionManagerInfo.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/EntityPerformanceLogQuery.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonDocumentRetrieve.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PatientCorrelation.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PropertyAccess.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/DeferredQueueManager.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/EventCommon.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonDocumentTransform.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PatientCorrelationFacade.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/Subscription.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/DocManager.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/HiemAuditLog.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/NhincCommonEntity.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/PatientCorrelationFacadeDte.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/common/SubscriptionB2OverrideForCdc.xsd</xsd>
                </xsdoption>
                <!-- nhinc/gateway -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/gateway/AdapterPatientDiscoveryDeferredReqQueueProcess.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/gateway/Aggregator.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/gateway/Audit.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/gateway/HiemSubscriptionRepositoryUtil.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/gateway/SamlTokenData.xsd</xsd>
                </xsdoption>
                <!-- nhinc/hl7 -->
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/hl7/HL7CommonDataLayerMessages.xsd </xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/hl7/HL7PatientDiscoveryMessages.xsd</xsd>
                </xsdoption>
                <xsdoption>
                  <xsd>${basedir}/../Interfaces/src/schemas/nhinc/hl7/HL7ProxyPatientDiscoveryMessages.xsd</xsd>
                </xsdoption>
              </xsdOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <version>${cxf.version}</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <fork>once</fork>
              <encoding>UTF-8</encoding>
              <sourceRoot>${project.build.directory}/generated/cxf</sourceRoot>
              <wsdlRoot>${basedir}/../Interfaces/src/wsdl</wsdlRoot>
              <includes>
                <include>*.wsdl</include>
              </includes>
              <excludes>
                <exclude>NhinUddiSubrV3PortType.wsdl</exclude>
                <exclude>NhincComponentInternalSubDiscovery201309Orch.wsdl</exclude>
                <exclude>rw-2.wsdl</exclude>
                <exclude>uddi_api_v3_binding.wsdl</exclude>
                <exclude>uddi_api_v3_portType.wsdl</exclude>
                <exclude>uddi_custody_v3_binding.wsdl</exclude>
                <exclude>uddi_custody_v3_portType.wsdl</exclude>
                <exclude>uddi_repl_v3_binding.wsdl</exclude>
                <exclude>uddi_repl_v3_portType.wsdl</exclude>
                <exclude>uddi_sub_v3_binding.wsdl</exclude>
                <exclude>uddi_sub_v3_portType.wsdl</exclude>
                <exclude>uddi_subr_v3_binding.wsdl</exclude>
                <exclude>uddi_subr_v3_portType.wsdl</exclude>
                <exclude>uddi_vs_v3_binding.wsdl</exclude>
                <exclude>uddi_vs_v3_portType.wsdl</exclude>
                <exclude>uddi_vscache_v3_binding.wsdl</exclude>
                <exclude>uddi_vscache_v3_portType.wsdl</exclude>
                <!-- non conforming with WS-I -->
                <exclude>DoDConnector.wsdl</exclude>
                <exclude>NhincComponentConnectionManager.wsdl</exclude>
              </excludes>
              <defaultOptions>
                <extraargs>
                  <extraarg>-verbose</extraarg>
                  <extraarg>-client</extraarg>
                  <extraarg>-noAddressBinding</extraarg>
                  <extraarg>-dns</extraarg>
                  <extraarg>false</extraarg>
                </extraargs>
              </defaultOptions>
            </configuration>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <pluginRepositories>
    <pluginRepository>
      <id>apache-snapshots</id>
      <name>Apache SNAPSHOT Repository</name>
      <url>http://repository.apache.org/snapshots/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
