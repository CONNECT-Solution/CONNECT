<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:soap="http://cxf.apache.org/bindings/soap" xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">


    <bean id="eventfactory" class="gov.hhs.fha.nhinc.event.EventFactoryFactoryBean" />
    
    <bean name="eventmanager" class="gov.hhs.fha.nhinc.event.EventManager" factory-method="getInstance" />

    <bean id="auditRepositoryProxyObjectFactory" class="gov.hhs.fha.nhinc.auditrepository.nhinc.proxy.AuditRepositoryProxyObjectFactory" />


     <bean id="auditRepositoryLogger" class="gov.hhs.fha.nhinc.auditrepository.AuditRepositoryLogger"/>

    <bean id="inboundPatientDiscoveryOrchFactory" class="gov.hhs.fha.nhinc.patientdiscovery.nhin.InboundPatientDiscoveryOrchFactory" factory-method="getInstance" />

  
    <bean id="patientDiscoveryAuditLogger" class="gov.hhs.fha.nhinc.patientdiscovery.PatientDiscoveryAuditLogger" >
        <constructor-arg ref="auditRepositoryLogger" />
         <constructor-arg ref="auditRepositoryProxyObjectFactory" />
    </bean>

    <bean id="nhinPDOrchestrator"
        class="gov.hhs.fha.nhinc.patientdiscovery.NhinPatientDiscoveryImpl">
        <property name="AuditLogger" ref="patientDiscoveryAuditLogger" />
        <property name="OrchestrationFactory" ref="inboundPatientDiscoveryOrchFactory" />
    </bean>

    <bean id="nhinPD"
        class="gov.hhs.fha.nhinc.patientdiscovery._10.gateway.ws.NhinPatientDiscovery">
        <property name="orchestratorImpl">
            <ref bean="nhinPDOrchestrator" />
        </property>
    </bean>
    
    
    <!-- Aspect Service -->
    <aop:aspectj-autoproxy />
    <bean id="eventAspectAdvice" class="gov.hhs.fha.nhinc.aspect.EventAspectAdvice" />
    
    <bean id="eventPDAspect"
        class="gov.hhs.fha.nhinc.patientdiscovery.aspect.PatientDiscoveryEventAspect">
        <property name="EventFactory" ref="eventfactory" /> 
        <property name="EventRecorder" ref="eventmanager" />
     </bean>
    
    <bean id="eventPDDefReqAspect"
        class="gov.hhs.fha.nhinc.patientdiscovery.aspect.PatientDiscoveryDeferredReqEventAspect">
        <constructor-arg ref="eventAspectAdvice" />
    </bean>
    
    <bean id="eventPDDefRespAspect"
        class="gov.hhs.fha.nhinc.patientdiscovery.aspect.PatientDiscoveryDeferredRespEventAspect">
        <constructor-arg ref="eventAspectAdvice" />
    </bean>
    
</beans>