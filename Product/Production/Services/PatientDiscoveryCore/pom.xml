<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       
    http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.connectopensource</groupId>
        <artifactId>Services</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>PatientDiscoveryCore</artifactId>
    <packaging>jar</packaging>
    <name>CONNECT Patient Discovery Core</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>CONNECTCoreLib</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>org.connectopensource</groupId>
            <artifactId>PatientCorrelationCore</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>.gitignore</exclude>
                    <exclude>xml-resources/</exclude>
                </excludes>
            </resource>
            <resource>
                <!-- <directory>${basedir}/src/main/resources/wsdl</directory> -->
                <directory>${basedir}/../../Common/Interfaces/src/wsdl</directory>
                <includes>
                    <include>*PatientDiscovery*.wsdl</include>
                    <include>*Mpi*.wsdl</include>
                </includes>
                <targetPath>${project.build.directory}/wsdl2java-sources/wsdl</targetPath>
            </resource>
            <resource>
                <!-- Caution: Defining this resource to copy over the extracted 
                    wsdls from <directory> into ${project.build.directory}/classes so the resources 
                    are included within resulting archive -->
                <directory>${project.build.directory}/wsdl2java-sources/</directory>
                <includes>
                    <include>wsdl/**/*.wsdl</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <!-- Used to pull gateway.properties file from the shared 
                    resource JAR -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <id>unpack-test-resources</id>
                        <!-- Using the initialize phase because it is before 
                            the generate sources phase -->
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <!-- Artifact that Holds our custom templates -->
                                    <groupId>org.connectopensource</groupId>
                                    <artifactId>Properties</artifactId>
                                    <version>${project.parent.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <includes>AuditRepositoryProxyConfig.xml,adapter.properties</includes>
                            <outputDirectory>${project.build.directory}/test-classes/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
