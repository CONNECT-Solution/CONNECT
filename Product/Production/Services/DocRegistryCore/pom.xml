<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       
    http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>gov.hhs.fha</groupId>
        <artifactId>Services</artifactId>
        <version>1.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>DocRegistryCore</artifactId>
    <packaging>jar</packaging>
    <name>CONNECT Document Registry Core</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>gov.hhs.fha</groupId>
            <artifactId>CONNECTCommonTypesLib</artifactId>
            <version>1.0.1-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <artifactId>activation</artifactId>
                    <groupId>javax.activation</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <repositories>
    </repositories>
    <build>
        <resources>
            <resource>
                <!-- <directory>${basedir}/src/main/resources/wsdl</directory> -->
                <directory>${basedir}/../../Common/Interfaces/src/wsdl</directory>
                <includes>
                    <include>*DocRegistry*.wsdl</include>
                </includes>
                <targetPath>${project.build.directory}/wsdl2java-sources/wsdl</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <!-- Used to pull XSD files from the JAR -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-xsd-files</id>
                        <!-- Using the initialize phase because it is before 
                            the generate sources phase -->
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <!-- Artifact that Holds our custom templates -->
                                    <groupId>gov.hhs.fha</groupId>
                                    <artifactId>CONNECTCommonTypesLib</artifactId>
                                    <version>${parent.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <includes>schemas/**/*.xsd</includes>
                            <outputDirectory>${project.build.directory}/wsdl2java-sources/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>gov.hhs.fha</groupId>
                        <artifactId>CONNECTCommonTypesLib</artifactId>
                        <version>1.0.1-SNAPSHOT</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <configuration>
                            <fork>once</fork>
                            <encoding>UTF-8</encoding>
                            <sourceRoot>${project.build.directory}/generated-sources/</sourceRoot>
                            <classesDirectory>${project.build.directory}/wsdl2java-sources/</classesDirectory>
                            <wsdlRoot>${project.build.directory}/wsdl2java-sources/</wsdlRoot>
                            <includes>
                                <include>**/wsdl/*.wsdl</include>
                            </includes>
                            <defaultOptions>
                                <extraargs>
                                    <extraarg>-verbose</extraarg>
                                    <extraarg>-client</extraarg>
                                    <extraarg>-dns</extraarg>
                                    <extraarg>false</extraarg>
                                    <extraarg>-noTypes</extraarg>
                                </extraargs>
                                <!-- <bindingFiles> <bindingFile>${basedir}/src/main/resources/sun-jaxb.episode</bindingFile> 
                                    </bindingFiles> -->
                                <noAddressBinding>true</noAddressBinding>
                            </defaultOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
