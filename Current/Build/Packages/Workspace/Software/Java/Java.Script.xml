<?xml version="1.0" encoding="utf-8" ?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="Workspace.Java.Scripts">

  <property name="Java.Install.FriendlyName" value="Java SE6 Update 13"/>
  <property name="Java.Install.Path" value="C:\Java\jdk1.6.0_13"/>
  <property name="Java.Installer.FileName" value="jdk-6u13-windows-i586-p.exe"/>
  <property name="Java.Installer.Download.URL" value="ftp://FTPOut:Ag1l3xHC0ut!@ftp.agilexhealth.com/Outgoing/Build/${Java.Installer.FileName}"/>
  
	<target name="Workspace.RequieredSoftware.Java">
    <ifnot test="${directory::exists(Java.Install.Path)}" >
      <call target="Java.DownloadAndInstall"/>
    </ifnot>
  </target>

  <target name="Java.DownloadAndInstall">
    <ask answer="Answer"
           question="It looks like ${Java.Install.FriendlyName} is not installed.  This software is required.  Do you wish to install the software?"
           caption="Proceed Without Required Software?"
           showdialog="true" >
      <options>
        <string value="Install"/>
        <string value="Exit"/>
      </options>
    </ask>
    <ifthenelse test="${Answer == 'Install'}">
      <then>
        <get
          src="${Java.Installer.Download.URL}"
          dest="${environment::get-variable('TEMP')}\${Java.Installer.FileName}"
          />
        <exec 
          workingdir="${environment::get-variable('TEMP')}" 
          program="${environment::get-variable('TEMP')}\${Java.Installer.FileName}" 
          commandline='/s /v "/qn INSTALLDIR=${Java.Install.Path}"' 
          verbose="true"
        />
      </then>
      <elseif if="${Answer == 'Exit'}">
        <fail message="Please install ${Java.Install.FriendlyName} to ${Java.Install.Path}!" />
      </elseif>
    </ifthenelse>
  </target>

</project>